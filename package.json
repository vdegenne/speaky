{
	"name": "speak",
	"version": "1.0.0",
	"description": "speak",
	"type": "module",
	"author": "Valentin Degenne <vdegenne@gmail.com>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": ""
	},
	"devDependencies": {
		"@material/web": "^1.4.1",
		"@snar/lit": "^1.5.1",
		"@vdegenne/about-dialog": "^0.4.2",
		"@vdegenne/material-color-helpers": "^1.9.0",
		"custom-element-decorator": "^0.6.0",
		"lit": "^3.1.3",
		"lit-with-styles": "^2.1.3",
		"material-3-prompt-dialog": "^0.12.3",
		"material-shell": "^1.2.5",
		"postcss": "^8.4.38",
		"rollup-plugin-material-all": "^1.2.2",
		"snar": "^2.2.0",
		"snar-save-to-local-storage": "^1.0.1",
		"tailwindcss": "^3.4.3",
		"toastit": "^0.1.0",
		"vite": "^5.2.11",
		"vite-plugin-mdicon2svg": "^0.0.4",
		"wireit": "^0.14.4"
	},
	"scripts": {
		"dev": "wireit",
		"build": "wireit",
		"serve": "wireit"
	},
	"wireit": {
		"dev": {
			"command": "vite --host",
			"files": [
				"vite.config.ts"
			],
			"output": [
				"./node_modules/.vite"
			]
		},
		"build": {
			"command": "vite build",
			"files": [
				"vite.config.ts",
				"index.html",
				"src"
			],
			"output": [
				"docs"
			]
		},
		"serve": {
			"command": "node server.js",
			"files": [
				"server.js"
			],
			"service": true,
			"dependencies": [
				"build"
			]
		}
	},
	"dependencies": {
		"@koa/bodyparser": "^5.1.1",
		"@koa/router": "^12.0.1",
		"koa": "^2.15.3",
		"koa-static": "^5.0.0"
	}
}
